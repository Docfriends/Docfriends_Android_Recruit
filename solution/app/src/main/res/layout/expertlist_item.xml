<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="expertItem"
            type="test.map.dak_project.dakmodel_Package.Expert" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="210dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/expert_cardView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/expert_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_foreground" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/namelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expert_cardView">

            <TextView
                android:id="@+id/name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{expertItem.name.toString()}"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:text="김닥톡" />

            <TextView
                android:id="@+id/typeName_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{expertItem.typeNametext.toString()}"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:text="의사" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/expert_tagList_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/expert_cardView"
            app:layout_constraintStart_toStartOf="@+id/expert_cardView"
            app:layout_constraintTop_toBottomOf="@id/namelayout" />

        <TextView
            android:id="@+id/companyName_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{expertItem.companyName.toString()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expert_tagList_RecyclerView"
            tools:text="닥프렌즈 병원" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>